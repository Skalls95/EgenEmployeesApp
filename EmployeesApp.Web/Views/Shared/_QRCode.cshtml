@model int

@{
    var url = Url.Action("Clock", "Employees", new { id = Model }, ViewContext.HttpContext.Request.Scheme);
    QRCodeGenerator qrGenerator = new QRCodeGenerator();
    QRCodeData qrCodeData = qrGenerator.CreateQrCode(url, QRCoder.QRCodeGenerator.ECCLevel.Q);

    PngByteQRCode pngByteQrCode = new PngByteQRCode(qrCodeData);
    var qrCodeBytes = pngByteQrCode.GetGraphic(5);
    var base64 = Convert.ToBase64String(qrCodeBytes);
}
<img src="data:image/png;base64,@base64" />
